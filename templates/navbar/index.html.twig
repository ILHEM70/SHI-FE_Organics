{% block title %}{% endblock %}

{% block body %}
    <nav class="navbar">
        <div class="navbar-container">
            <a href="{{ path('app_home') }}" class="navbar-brand-logo">
                <img src="{{ asset('assets/images/téléchargement.png') }}" alt="Logo">
            </a>
            <ul class="navbar-links">
                {% if app.user %}
                    <li>
                        <a href="{{ path('app_profil') }}">
                            Bienvenue {{ app.user.firstname }}
                        </a>
                    </li>
                {% endif %}
                <li><a href="{{ path ('app_home') }}">Accueil</a></li>
                <li><a href="{{ path ('app_products') }}">Products</a></li>
                {% if app.user %}
                    <li><a href="{{ path ('app_profil') }}">Profil</a></li>
                    <li id="logo_panier">
                        <a href="{{ path ('app_cart') }}" id="a_panier">
                            <img src="{{ asset ('assets/images/caddie.png') }}" alt="Panier">
                        </a>
                        <p id="session_nb">{{ app.session.get('nb') == 0 ? '' : app.session.get('nb') }}</p>
                    </li>
                    <li><a href="{{ path ('app_logout') }}">Déconnexion</a></li>

                {% else %}
                    <li><a href="{{ path ('app_login') }}">Connexion</a></li>
                    <li><a href="{{ path ('app_register') }}">Inscription</a></li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path ('admin') }}">Admin</a></li>
                {% endif %}
            </ul>

            <div class="hamburger-menu" id="hamburgerMenu">
                <div class="menu-flex">
                    <span class="bar">
                        <i class="fa-solid fa-bars"></i>
                    </span>
                    <div id="menu_div">
                        <ul>
                            {% if app.user %}
                                <li>Bienvenue<br>{{ app.user.firstname }}</li>
                            {% endif %}
                            <li><a href="{{ path ('app_home') }}">Accueil</a></li>
                            <li><a href="{{ path ('app_products') }}">Products</a></li>
                            {% if app.user %}
                                <li><a href="{{ path ('app_profil') }}">Profil</a></li>
                                <li id="logo_panier">
                                    <a href="{{ path ('app_cart') }}" id="a_panier">
                                        <img src="{{ asset ('assets/images/caddie.png') }}" alt="Panier">
                                    </a>
                                    <p id="session_nb">{{ app.session.get('nb') == 0 ? '' : app.session.get('nb') }}</p>
                                </li>
                                <li><a href="{{ path ('app_logout') }}">Déconnexion</a></li>
                            {% else %}
                                <li><a href="{{ path ('app_login') }}">Connexion</a></li>
                                <li><a href="{{ path ('app_register') }}">Inscription</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('admin') }}">Admin</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    {% for messages in app.flashes('error') %}
        <div class="alert alert-danger">
            <h3>{{ messages }}</h3>
        </div>
    {% endfor %}
{% endblock %}

